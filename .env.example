# ServiceNow instance connection settings
# Copy this file to .env and fill in your values

# ServiceNow instance URL (e.g., https://myinstance.service-now.com)
SERVICENOW_INSTANCE=https://your-instance.service-now.com

# ServiceNow credentials (basic auth)
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password-here

# Optional: Request timeout in seconds (default: 30)
SERVICENOW_TIMEOUT=30

# Optional: Max retries for transient failures (default: 3)
SERVICENOW_MAX_RETRIES=3

# Optional: Local audit storage directory (default: .snow-audit)
AUDIT_STORAGE_PATH=.snow-audit

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
